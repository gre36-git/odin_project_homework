      function capitalize() {
        let targetString = document.getElementById("myText").value;
        console.log(targetString + " <- is the initial text input");
        let lowerCasedString = targetString.slice(1,).toLowerCase();
        console.log(lowerCasedString + " <- force format to lowercase everything but the first value");
        let upperCasedString = targetString.slice(0,1).toUpperCase();
        console.log(upperCasedString + " <- force format to uppercase only the first value");
        let catTheStrings = upperCasedString + lowerCasedString;
        document.getElementById("demo").innerHTML = catTheStrings;
        console.log(catTheStrings + " <- concatenate adjusted values");
        return catTheStrings;
    }

